# http://editorconfig.org

root = true

[*]

# change these settings to your own preference
indent_style = space
indent_size = 2

# we recommend you to keep these unchanged
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,rst,ini,js}]
indent_style = space
indent_size = 4

[*.py]
# https://github.com/timothycrosley/isort/wiki/isort-Settings
line_length = 120
known_first_party = annotation_tool, pubmed
forced_separate = django
multi_line_output = 3
default_section = THIRDPARTY
order_by_type = true
import_heading_future = "Compatibility"
import_heading_stdlib = "Python Libraries"
import_heading_thirdparty = "Third Party Packages"
import_heading_firstparty = "Annotation Tool

[*.yml]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_size = 3

[.*rc]
indent_size = 4

[{package,bower}.json]
indent_style = space
indent_size = 2
