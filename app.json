{
  "name":"Annotation-Tool",
  "description":"Pubmed annotation tool.",
  "scripts":{
    "postdeploy":"django-admin migrate --noinput --verbosity 2"
  },
  "env":{
    "DEBUG":"TRUE",
    "DJANGO_AWS_ACCESS_KEY_ID":{
      "required":true
    },
    "DJANGO_AWS_SECRET_ACCESS_KEY":{
      "required":true
    },
    "DJANGO_AWS_STORAGE_BUCKET_NAME":{
      "required":true
    },
    "DJANGO_MAILGUN_API_KEY":{
      "required":true
    },
    "DJANGO_MAILGUN_SERVER_NAME":{
      "required":true
    },
    "DJANGO_SECRET_KEY":{
      "required":true
    },
    "DJANGO_SETTINGS_MODULE":"config.settings.production",
    "NODE_MODULES_CACHE":"true",
    "NPM_CONFIG_PRODUCTION":"true",
    "REDIS_URL":{
      "required":true
    },
    "DATABASE_URL":{
      "required":true
    },
    "DJANGO_LOG_LEVEL":"DEBUG"
  },
  "addons":[
    "mailgun",
    "papertrail",
    "heroku-redis",
    "redismonitor",
    "heroku-postgresql"
  ]
}