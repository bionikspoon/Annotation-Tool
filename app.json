{
  "name": "annotation_tool",
  "description": "Bioinformatics annotation tool.",
  "env": {
    "DJANGO_DEBUG": "False",
    "DJANGO_AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "DJANGO_AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "DJANGO_AWS_STORAGE_BUCKET_NAME": {
      "required": true
    },
    "DJANGO_MAILGUN_ACCESS_KEY": {
      "required": true
    },
    "DJANGO_MAILGUN_SERVER_NAME": {
      "required": true
    },
    "DJANGO_SECRET_KEY": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": "server.config.settings.production",
    "NODE_MODULES_CACHE": "true",
    "NPM_CONFIG_PRODUCTION": "false",
    "REDIS_URL": {
      "required": true
    },
    "DJANGO_LOG_LEVEL": "DEBUG"
  },
  "scripts": {
    "postdeploy": "python manage.py migrate --noinput --verbosity 2"
  },
  "repository": "https://github.com/bionikspoon/Annotation-Tool",

  "addons": [
    "mailgun",
    "papertrail",
    "heroku-redis",
    "redismonitor",
    "heroku-postgresql"
  ],

  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-python"
    }
  ]
}
